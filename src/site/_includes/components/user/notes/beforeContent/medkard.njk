{% if metatags is defined %}
  {% if metatags.startsWith('https://') %}
    <iframe src={{ metatags }} width="100%" height="500px">
      <p>Ваш браузер не підтримує елемент iframe.</p>
    </iframe>
  {% else %}
<style>
  .qr-code-container {
    text-align: center;
  }
</style>
<div class="qr-code-container">
  <canvas id="qrcode"></canvas>
</div>
<script src="https://cdn.jsdelivr.net/npm/qrious/dist/qrious.min.js"></script>
<script type="text/javascript">
  var qrcode = new QRious({
    element: document.getElementById("qrcode"),
    value: "https://dg.stopbot.pp.ua/{{ page.url | replace('/', '', true) }}",
    size: 110,
    background: "#FAF8F8",
    foreground: "#284B63",
    level: "L"
  });
</script>
  {% endif %}
{% else %}
<style>
  .qr-code-container {
    display: block;
    margin-left: auto;
    margin-right: auto;
    text-align: center;
  }
</style>
<div class="qr-code-container">
  <canvas id="qrcode"></canvas>
</div>
<script src="https://cdn.jsdelivr.net/npm/qrious/dist/qrious.min.js"></script>
<script type="text/javascript">
  var qrcode = new QRious({
    element: document.getElementById("qrcode"),
    value: "https://dg.stopbot.pp.ua/{{ page.url | replace('/', '', true) }}",
    size: 110,
    background: "#FAF8F8",
    foreground: "#284B63",
    level: "L"
  });
</script>
</div>
<img class="qr-code" src="https://chart.googleapis.com/chart?chs=110x110&amp;cht=qr&amp;chl=https://dg.stopbot.pp.ua/{{ page.url | replace('/', '', true) }}&amp;chco=284B63|FAF8F8&amp;chld=L|1" alt="QR Code"> 
{% endif %}